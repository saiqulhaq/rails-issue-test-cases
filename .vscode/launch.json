    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rails App",
            "type": "Ruby",
            "request": "launch",
            // Current dir using env variable input in tasks.json
            "cwd": "${workspaceRoot}/project", 
            // run bundle install before rails server
            "preLaunchTask": "Create project",
            "program": "bin/rails",
            "postDebugTask": "Delete project",
            // Setup debug binding IP and port.
            "args": ["s", "-b", "0.0.0.0", "-p", "3000"], 
        }
    ]
}